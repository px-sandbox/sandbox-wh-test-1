{
  "name": "pulse-dx",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "test": "sst bind vitest",
    "test2": "vitest run --coverage",
    "prepare": "pnpx husky install",
    "lint": "eslint . --ext .ts",
    "validate-branch": "validate-branch-name '^(master|dev){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}'",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@elastic/elasticsearch": "7.13.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/aws-lambda": "^8.10.111",
    "@types/crypto-js": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^2.1.0",
    "aws-sdk-client-mock": "^3.0.0",
    "constructs": "10.2.69",
    "crypto-js": "^4.2.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^8.0.0",
    "typescript": "^5.1.6",
    "validate-branch-name": "^1.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.95.1",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1444.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "sst": "2.28.0",
    "vitest": "^2.1.0",
    "winston": "^3.8.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "validate-branch-name": {
    "pattern": "^(master|develop){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
    "errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
  },
  "engines": {
    "node": ">=16.17.1",
    "pnpm": ">=7.29.2"
  }
}
