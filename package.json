{
  "name": "pulse-dx",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "test": "sst bind vitest",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts",
    "validate-branch": "validate-branch-name '^(master|dev){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}'",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@elastic/elasticsearch": "7.13.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/aws-lambda": "^8.10.111",
    "@types/crypto-js": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "aws-cdk-lib": "2.62.2",
    "aws-sdk-client-mock": "^2.1.1",
    "constructs": "10.1.156",
    "crypto-js": "^4.1.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "sst": "^2.3.1",
    "typescript": "^5.0.2",
    "validate-branch-name": "^1.3.0",
    "vitest": "^0.29.7",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1311.0",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "winston": "^3.8.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "validate-branch-name": {
    "pattern": "^(master|develop){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
    "errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
  }
}
