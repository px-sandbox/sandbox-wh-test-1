{
  "name": "pulse-dx",
  "version": "1.9.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "test": "sst bind vitest",
    "test2": "vitest run --coverage",
    "prepare": "pnpx husky install",
    "lint": "eslint . --ext .ts",
    "validate-branch": "validate-branch-name '^(master|dev){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}'",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@elastic/elasticsearch": "7.13.0",
    "@tsconfig/node16": "16.1.3",
    "@types/aws-lambda": "8.10.147",
    "@types/crypto-js": "4.2.2",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "@vitest/coverage-v8": "3.0.7",
    "aws-sdk-client-mock": "4.1.0",
    "constructs": "10.2.69",
    "crypto-js": "4.2.0",
    "eslint": "9.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "husky": "9.1.7",
    "typescript": "5.7.3",
    "validate-branch-name": "1.3.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.95.1",
    "aws-lambda": "1.0.7",
    "aws-sdk": "2.1692.0",
    "js-yaml": "4.1.0",
    "prettier": "3.5.2",
    "prettier-eslint": "16.3.0",
    "sst": "2.28.0",
    "vitest": "3.0.7",
    "winston": "3.17.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "validate-branch-name": {
    "pattern": "^(master|develop){1}$|^(feature|fix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
    "errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
  },
  "engines": {
    "node": ">=18.20.7",
    "pnpm": ">=10.5.0"
  }
}
